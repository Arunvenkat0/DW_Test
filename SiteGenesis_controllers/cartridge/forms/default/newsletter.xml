<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">

	
	<field formid="email" label="forms.newsletter.email.label" type="string" mandatory="true" regexp="^[\w-\.]{1,}\@([\da-zA-Z-]{1,}\.){1,}[\da-zAZ-]{2,6}$"  
													 binding="custom.email"  max-length="50"/>
									
													 
	<field formid="fname" label="forms.newsletter.firstname.label" type="string" mandatory="true" binding="custom.firstName" max-length="50"/>  
	<field formid="lname" label="forms.newsletter.lastname.label" type="string" mandatory="true" binding="custom.lastName" max-length="50"/> 
	
	 
	 <action formid="subscribe" valid-form="true"/>
	 
 </form> 